{
	"manifest_version": 2,

	"name": "My Extension",
	"description": "This is a short description for our Chrome Extension",
	"version": "1.0",

	"browser_action": {
		"default_icon": "on.png",
		"default_title": "Rasta Check"
	},
	"icons": {
		"64": "off.png"
	},
	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"https://*/*",
		"http://*/*",
		"background"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["jquery.js", "myscript.js"],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [
		"toolbar.html",
		"style.css"
	]
}

