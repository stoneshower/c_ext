{
	"manifest_version": 2,

	"name": "My Extension",
	"description": "This is a short description for our Chrome Extension",
	"version": "1.0",

	"browser_action": {
		"default_icon": "off.png",
		"default_title": "Rasta Check"
		// "default_popup": "mypopup.html"
	},
	"icons": {
		"64": "off.png"
	},
	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"https://*/*",
		"http://*/*",
		"background"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"css": ["style.css"],
			"js": ["jquery.js"],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [
		"toolbar.html",
		"style.css"
	]
}


