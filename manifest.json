{

	"manifest_version": 2,

	"name": "My Extension",
	"description": "This is a short description for our Chrome Extension",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "mypopup.html"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"chrome_url_overrides": {
		"newtab": "newtab.html"
		// "history": "newtab.html"
	},
	"icons": {
		"64": "icon.png"
	},
	"permissions": [
		"activeTab",
		"https://ajax.googleapis.com/"
	],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["myscript.js"]
		}
	]
}
