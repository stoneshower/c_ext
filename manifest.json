{
	"manifest_version": 2,
    "name": "load html source",
    "description": "This is a short description for our Chrome Extension",
    "version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Hello!"
	},
    "permissions": [
        "tabs", "<all_urls>", "storage"
    ],
    "icons": {
        "64": "icon.png"
    },
    // "background": {
    //   "scripts": ["background.js"]
    // },
    "content_scripts": [{
    	// "matches": ["http://*/*", "https://*/*"],
        "matches": ["<all_urls>"],
        "css": ["style.css"],
        "js": ["jquery.js", "myscript.js"],
        "run_at": "document_start"
    }]
}



